<div class="choose-verification-way">
  {{#d-modal-body title="communitarian.create_account.choose_verification_way.title"}}
    <p class="choose-verification-way__description">
      {{I18n "communitarian.create_account.choose_verification_way.description" }}
    </p>

    <ul class="choose-verification-way__radio-list">
      <li class="choose-verification-way__radio-item">
        {{radio-button
          name="verification-choice"
          id="verification-choice-card"
          value="card"
          onChange=(action "changeVerificationChoice")
        }}

        <label for="verification-choice-card"
              class="choose-verification-way__radio-label">
          <span class="choose-verification-way__radio-title">
            {{I18n "communitarian.create_account.choose_verification_way.card_title" }}
          </span>
          <span class="choose-verification-way__radio-description">
            {{I18n "communitarian.create_account.choose_verification_way.card_description" }}
          </span>
        </label>
      </li>

      <li class="choose-verification-way__radio-item">
        {{radio-button
          name="verification-choice"
          id="verification-choice-identity"
          value="identity"
          onChange=(action "changeVerificationChoice")
        }}

        <label for="verification-choice-identity"
              class="choose-verification-way__radio-label">
          <span class="choose-verification-way__radio-title">
            {{I18n "communitarian.create_account.choose_verification_way.identity_title" }}
          </span>
          <span class="choose-verification-way__radio-description">
            {{{I18n "communitarian.create_account.choose_verification_way.identity_description" }}}
          </span>
        </label>
      </li>
    </ul>
  {{/d-modal-body}}

  <div class="modal-footer">
    {{d-button
      class="btn-large btn-primary"
      action=(action "showNextStep")
      disabled=submitDisabled
      label="communitarian.create_account.continue"
    }}
  </div>
</div>
