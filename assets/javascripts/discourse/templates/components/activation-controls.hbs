{{#unless siteSettings.must_approve_users}}
  {{#if sendActivationEmail}}
    {{d-button
      action=sendActivationEmail
      label="login.resend_title"
      icon="envelope"
      class="btn-primary resend"
    }}
  {{/if}}
{{/unless}}

{{#if editActivationEmail}}
  {{d-button
    action=editActivationEmail
    label="communitarian.create_account.activation_email.change_email"
    icon="pencil-alt"
    class="edit-email"
  }}
{{/if}}
